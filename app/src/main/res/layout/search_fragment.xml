<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.search.SearchFragment"
    android:orientation="vertical">

    <com.nobodysapps.greentastic.ui.views.SearchView
        android:id="@+id/sourceSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iconId="@drawable/ic_location_24dp"
        android:hint="@string/map_source_hint"
        android:contentDescription="@string/map_source_content"
        tools:ignore="ContentDescription" />
    <com.nobodysapps.greentastic.ui.views.SearchView
        android:id="@+id/destinationSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iconId="@drawable/ic_flag_24dp"
        android:hint="@string/map_destination_hint"
        android:contentDescription="@string/map_destination_content"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:id="@+id/fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>